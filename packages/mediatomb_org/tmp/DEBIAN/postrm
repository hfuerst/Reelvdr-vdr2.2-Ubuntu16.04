#!/bin/sh

if [ "$1" = "purge" ] ; then
    rm -f /var/lib/mediatomb/sqlite3.db /var/lib/mediatomb/mediatomb.html /var/log/mediatomb /var/run/mediatomb.pid

   # database name should match mediatomb's config 
   # file (/etc/mediatomb/config.xml) : database_name:='mediatomb'
    mysql -uroot -proot -e "DROP DATABASE mediatomb;"

    userdel mediatomb || true
fi

# Automatically added by dh_installinit
if [ "$1" = "purge" ] ; then
	update-rc.d mediatomb remove >/dev/null
fi
# End automatically added section

exit 0

# Rules for USBmount

KERNEL=="sd*", DRIVERS=="sbp2",            ACTION=="add",  RUN+="/usr/share/usbmount/usbmount add"
KERNEL=="sd*", SUBSYSTEMS=="ata|usb|ieee1394", ACTION=="add",  RUN+="/usr/share/usbmount/usbmount add"
KERNEL=="ub*", SUBSYSTEMS=="ata|usb|ieee1394", ACTION=="add",  RUN+="/usr/share/usbmount/usbmount add"
KERNEL=="sd*",             ACTION=="remove", RUN+="/usr/share/usbmount/usbmount remove"
KERNEL=="ub*",             ACTION=="remove", RUN+="/usr/share/usbmount/usbmount remove"

#!/bin/sh
PREREQ=""
prereqs()
{
     echo "$PREREQ"
}

case $1 in
prereqs)
     prereqs
     exit 0
     ;;
esac

# reelfpctl
. /usr/share/initramfs-tools/hook-functions    #provides copy_exec
rm -f ${DESTDIR}/sbin/reelfpctl                #copy_exec won't overwrite an existing file
copy_exec /usr/share/reel/frontpanel/reelfpctl1 /sbin                #Takes location in filesystem and location in initramfs as arguments
